<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppCardView">
        <item name="cardCornerRadius">@dimen/app_cardview_default_radius</item>
        <item name="cardElevation">@dimen/app_cardview_default_elevation</item>
        <item name="cardMaxElevation">@dimen/app_cardview_default_elevation</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:stateListAnimator">@anim/state_anim_raise</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
</resources>